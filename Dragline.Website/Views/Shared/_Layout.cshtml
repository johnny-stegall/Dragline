<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dragline | @ViewBag.Title</title>
    <link type="text/css" href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link type="text/css" href="~/css/dragline.css" rel="stylesheet" />
    <link type="text/css" href="~/css/dragline-components.css" rel="stylesheet" />
    <link type="text/css" href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="Logo">
          <img src="~/images/dragline-48px.png" style="width: 40px;" />
        </a>

        <label for="chkNavigation"></label>
        <input type="checkbox" id="chkNavigation" class="Hidden" />

        <ul>
          <li>
            <a href="~/styling">
              <i class="fa fa-paw"></i>
              <span>Styling</span>
            </a>
          </li>
          <li>
            <a href="~/components">
              <i class="fa fa-cogs"></i>
              <span>Components</span>
            </a>
          </li>
        </ul>
      </nav>
    </header>

    <main>
      @RenderBody()
    </main>

    <footer>
    </footer>
    
    <script type="text/javascript" src="~/scripts/web-components/accordion.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/carousel.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/dropdown.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/index.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/infinite-scroll.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/modal.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/password-strength.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/pull-out.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/remaining-characters.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/tabs.js"></script>
    <script type="text/javascript" src="~/scripts/web-components/toasty.js"></script>
    @RenderSection("Scripts", required: false)
  </body>
</html>
